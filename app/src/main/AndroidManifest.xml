<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sweta.myapplication">

    <application
        android:name=".realmapplications.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/my_account"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/my_account"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".myactivities.SplashActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".myactivities.MainActivity"/>

    </application>

</manifest>